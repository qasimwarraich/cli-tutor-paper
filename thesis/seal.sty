%% General figure command
% use: \fig[width]{file}{caption}{label}
\newcommand\fig[4][0cm]{%
  \begin{figure}[htb]
    \ifdim #1=0cm
      \includegraphics{#2}
    \else
      \includegraphics[width=#1]{#2}
    \fi
    \caption{\label{#4}#3}
